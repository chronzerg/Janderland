<%- // Common JS files
    js([
        'js/lib/jquery',
        'js/lib/foundation',
        'js/lib/what-input',
        'js/lib/underscore',
        'js/app'
    ])
%>
<%-
    // Load page specific JS files
    (() => {
        var depPath;

        // List out dependencies with a filename
        // and a condition function.
        [
            {
                filename: 'index',
                condition: is_home
            }
        ]

        // Choose the dependency whose condition
        // returns true.
        .some((dep) => {
            if (dep.condition()) {
                depPath = 'js/'+dep.filename;
                return true
            }
            return false
        })

        // Display a link to the depency.
        if (depPath) return js(depPath)
        else         return ''
    })()
%>