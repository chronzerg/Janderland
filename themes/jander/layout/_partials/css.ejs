<%- // Common CSS Files
    css([
        'css/lib/foundation.css'
    ])
%>
<%-
    // Load page specific CSS files
    (() => {
        var depPath;

        // List out dependencies with a filename
        // and a condition function.
        [
            {
                filename: 'index',
                condition: is_home
            }
        ]

        // Choose the dependency whose condition
        // returns true.
        .some((dep) => {
            if (dep.condition()) {
                depPath = 'css/'+dep.filename;
                return true
            }
            return false
        })

        // Display a link to the depency.
        if (depPath) return css(depPath)
        else         return ''
    })()
%>