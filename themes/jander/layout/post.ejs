<article>
        <header>
            <h1><%= page.title %></h1>

            <div id="date">
                <%= moment(page.updated).format('MMMM D, YYYY') %>
            </div>

            <!--
             Tags
            -->
            <div id="tags">
                <% page.tags.forEach((tag, i) => { %>
                <div class="tags-tag">
                    <a href="<%= url_for(tag.path) %>">
                        <%= tag.name %>
                    </a>
                </div>
                <% }) %>
                <div id="tags-end"></div>
            </div>

            <hr>
        </header>
        
        <%- page.content %>

        <footer>
            <%
                // TODO - Decide if we want to put anything here.
            %>
        </footer>
</article>